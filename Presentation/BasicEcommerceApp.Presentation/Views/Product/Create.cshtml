@model BasicEcommerce.Domain.Entities.Product

<h2>Yeni Ürün Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Ürün Adı</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label>Açıklaması</label>
        <input type="text" class="form-control" asp-for="Description" />
    </div>
    <div class="form-group">
        <label>Fiyatı (TL)</label>
        <input type="number" class="form-control" asp-for="Price" />
    </div>
    <div class="form-group">
        <label>Stok Miktarı</label>
        <input type="number" class="form-control" asp-for="StockQuantity" />
    </div>
    <div class="form-group">
        <label>Resim İsmi</label>
        <input type="text" class="form-control" asp-for="ImageUrl" />
    </div>

    <button type="submit" class="btn btn-primary">Ekle</button>
</form>
